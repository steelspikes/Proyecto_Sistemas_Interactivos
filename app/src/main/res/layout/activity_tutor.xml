<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".TutorActivity">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimario"
        android:gravity="center_vertical|end"
        android:paddingEnd="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="ðŸ‘¤"
            android:textSize="18sp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Barra de navegaciÃ³n secundaria -->
    <LinearLayout
        android:id="@+id/secondBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#E5E5E5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Dependientes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTexto"
            android:gravity="start|center_vertical" />
    </LinearLayout>

    <!-- Contenido principal -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dependentsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/secondBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_dependent" />

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#3E4A52"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAddDependent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Dependiente"
            android:background="@drawable/btn_primary"
            android:textColor="@color/colorTextoBoton"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
